{
	"name": "icanboogie/http",
	"type": "library",
	"version": "6.0",
	"description": "Provides an API to handle HTTP requests.",
	"keywords": [
		"http",
		"dispatcher",
		"request",
		"response"
	],
	"homepage": "https://icanboogie.org/",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "https://olvlvl.com/",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/ICanBoogie/HTTP/issues",
		"source": "https://github.com/ICanBoogie/HTTP"
	},
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
	"minimum-stability": "dev",
	"prefer-stable": true,
	"prefer-dist": true,
	"require": {
		"php": ">=8.1",
		"ext-mbstring": "*",
		"icanboogie/prototype": "^6.0",
		"icanboogie/event": "^6.0",
		"icanboogie/datetime": "^6.0"
	},
	"require-dev": {
		"ext-fileinfo": "*",
		"ext-gd": "*",
		"jangregor/phpstan-prophecy": "^1.0",
		"phpspec/prophecy-phpunit": "^2.0",
		"phpstan/extension-installer": "^1.1",
		"phpstan/phpstan": "^1.5",
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"psr-4": {
			"ICanBoogie\\HTTP\\": "lib/"
		},
		"files": [
			"helpers.php"
		]
	},
    "autoload-dev": {
        "psr-4": {
            "Test\\ICanBoogie\\HTTP\\": "tests"
        }
    }
}
